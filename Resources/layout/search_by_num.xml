<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:id="@+id/gridLayout2">
        <ImageButton
            android:src="@drawable/abc_ic_star_black_36dp"
            android:layout_column="0"
            android:tooltipText="שמור במועדפים"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/save_favorite" />
        <TextView
            android:text="@string/src_by_num"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/textView1" />
    </GridLayout>
     <TextView
        android:layout_width="match_parent"
        android:layout_height="25.0dp"
        android:layout_marginRight="5dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:background="@color/material_grey_300"
        android:textColor="@android:color/black"
        android:visibility="invisible"
        android:id="@+id/labelFavorite" />
    <GridLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:id="@+id/gridLayout1"
        android:layout_marginBottom="5.0dp">
        <AutoCompleteTextView
            android:layout_column="0"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:id="@+id/autoComplete_operator" />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="82dp"
            android:layout_column="1"
            android:text="@string/choose_company"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView5" />
    </GridLayout>
    <TextView
        android:text="@string/enter_line"
        android:textAlignment="viewEnd"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1" />
    <EditText
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/txt_line_num"
        android:layout_marginBottom="0.0dp"
        android:layout_marginTop="0.0dp" />
    <TextView  
   android:layout_width="fill_parent"  
   android:layout_height="wrap_content"  
   android:layout_marginTop="10dip"  
   android:text="@string/choose_direction" />  
<Spinner  
   android:id="@+id/spinner"  
   android:layout_width="fill_parent"  
   android:layout_height="wrap_content"  
   android:prompt="@drawable/abc_btn_default_mtrl_shape" /> 
    <Button
        android:text="@string/search_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_search_num" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:isScrollContainer="true"
            android:id="@+id/table_by_num">
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
        >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_dest"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:id="@+id/textView1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dest"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:id="@+id/textView4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_source"
                    android:layout_marginLeft="5px"
                    android:layout_marginRight="5px"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:id="@+id/textView3" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/source"
                    android:id="@+id/textView2"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginRight="8px" />
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:background="@android:color/black"
                android:layout_height="3dp"/>
        </TableLayout>
    </ScrollView>
</LinearLayout>
