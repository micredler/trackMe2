<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout2">
    <GridLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="45.5dp"
        android:columnCount="2"
        android:rowCount="1"
        android:id="@+id/gridLayout2">
        <ImageButton
            android:src="@drawable/abc_ic_star_black_36dp"
            android:layout_column="0"
            android:tooltipText="@string/add_to_favorite"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/save_favorite" />
        <TextView
            android:text="@string/src_by_station"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/textView1" />
    </GridLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25.0dp"
        android:layout_margin="5dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:background="@color/material_grey_300"
        android:textColor="@android:color/black"
        android:visibility="invisible"
        android:id="@+id/labelFavorite" />
    <TextView
        android:text="@string/enter_station"
        android:textAlignment="viewEnd"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1" />
    <EditText
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_staion_num" />
    <Button
        android:text="@string/search_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_search_station" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:id="@+id/table_by_station">
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_dest"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:id="@+id/textView1"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dest"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:textStyle="bold"
                android:id="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_source"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:textStyle="bold"
                android:id="@+id/textView3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/line_num"
                android:id="@+id/textView2"
                android:textStyle="bold"
                android:layout_marginRight="8px" />
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:background="@android:color/black"
            android:layout_height="3dp"/>
    </TableLayout>

</LinearLayout>