<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:id="@+id/gridLayout2"
        android:layout_marginBottom="34.0dp">
        <ImageButton
            android:src="@drawable/abc_ic_star_black_36dp"
            android:layout_column="0"
            android:tooltipText="שמור במועדפים"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/save_favorite" />
        <TextView
            android:text="@string/train"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/textView1" />
    </GridLayout>
    <TextView
            android:text="התחל להקליד תחנת רכבת"
            android:textAlignment="viewEnd"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/textView1" />
    <AutoCompleteTextView android:id="@+id/autocomplete_train"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"/>
    <Button
        android:text="חיפוש"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_search_train" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:id="@+id/table_by_train">
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="זמן הגעה ליעד"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:id="@+id/textView1"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="יעד"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:textStyle="bold"
                android:id="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="שעת הגעה"
                android:layout_marginLeft="5px"
                android:layout_marginRight="5px"
                android:textStyle="bold"
                android:id="@+id/textView3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="רציף"
                android:id="@+id/textView2"
                android:textStyle="bold"
                android:layout_marginRight="8px" />
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:background="@android:color/black"
            android:layout_height="3dp"/>
    </TableLayout>
</LinearLayout>
